{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": "./",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["*"],
      "@prisma": ["lib/prisma"],
      "@models": ["generated/prisma/client"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["src/**/*", "src/config"],
  "exclude": ["node_modules"]
}
